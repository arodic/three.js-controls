{
  "name": "@io-gui/three-controls",
  "version": "1.0.5",
  "main": "index.js",
  "type":"module",
  "files": [
    "src",
    "build",
    "index.js",
    "index.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint:dev": "eslint src --fix",
    "lint": "eslint build -c ./config/eslint.three.json --no-ignore build --fix",
    "clean": "rm -rf build",
    "tsc": "tsc --declarationMap false --sourceMap false --p ./tsconfig.json",
    "tsc:dev": "tsc -w  --p ./tsconfig.json",
    "build": "yarn clean && yarn tsc && yarn lint && yarn rollup -c ./config/rollup.config.js",
    "build:dev": "yarn clean && yarn tsc:dev & sleep 5; yarn rollup -c ./config/rollup.config.js -w --environment DEV"
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/io-gui/three-controls.git"
  },
  "keywords": [
    "typescript",
    "threejs",
    "controls"
  ],
  "author": "Aleksandar (Aki) Rodic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/io-gui/three-controls/issues"
  },
  "homepage": "https://github.com/io-gui/three.js-controls",
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-mdcs": "^5.0.0",
    "rollup": "^2.33.3",
    "rollup-plugin-dts": "^1.4.14",
    "three": "^0.122.0",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "three": "^0.124.0"
  }
}
