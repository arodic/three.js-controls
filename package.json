{
  "name": "@io-gui/three-controls",
  "version": "1.0.1",
  "main": "index.js",
  "files": [
    "src",
    "build",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src --fix",
    "lint:mdcs": "eslint build -c three.eslint.json --no-ignore build --fix",
    "clean": "rm -rf build",
    "dev": "yarn clean && tsc -w",
    "build": "yarn clean && tsc --declarationMap false --sourceMap false && yarn repath:build && yarn lint:mdcs",
    "build:three": "yarn build yarn repath:three && yarn copy:three",
    "repath:build": "node repath.js '../../../three/src/Three' '../../three/build/three.module.js' build/*.js",
    "repath:three": "yarn repath:build && node repath.js '../../../three/' '../../../' build/*",
    "copy:three": "yarn cpx 'build/*' '../three/examples/jsm/controls/'",
    "dev:three": "yarn clean && tsc -w & yarn cpx 'build/*' '../three/examples/jsm/controls/' -t './repath.js' -w"
  },
  "sideEffects": false,
  "publishConfig": { "registry": "https://npm.pkg.github.com/" },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/io-gui/three-controls.git"
  },
  "keywords": [
    "typescript",
    "threejs",
    "controls"
  ],
  "author": "Aleksandar (Aki) Rodic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/io-gui/three-controls/issues"
  },
  "homepage": "https://github.com/io-gui/three.js-controls",
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/consistent-type-assertions": "error",
      "@typescript-eslint/no-use-before-define": "warn",
      "@typescript-eslint/no-floating-promises": "warn",
      "@typescript-eslint/no-explicit-any": "off",
      "no-var": "error",
      "eqeqeq": "error"
    }
  },
  "eslintIgnore": [
    "build",
    "repath.js",
    "index.js"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "cpx": "^1.5.0",
    "eslint": "^7.10.0",
    "eslint-config-mdcs": "^5.0.0",
    "replacestream": "^4.0.3",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "three": "^0.121.1"
  },
  "dependencies": {}
}
