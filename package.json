{
  "name": "@io-gui/three-controls",
  "version": "1.0.2",
  "main": "index.js",
  "files": [
    "src",
    "build",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint:dev": "eslint src --fix",
    "lint": "eslint build -c three.eslint.json --no-ignore build --fix",
    "clean": "rm -rf build",
    "build:dev": "yarn clean && tsc -w & sleep 5; yarn rollup -c -w --environment SOUCEMAPS",
    "build": "yarn clean && tsc --declarationMap false --sourceMap false && yarn lint && yarn rollup -c" 
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/io-gui/three-controls.git"
  },
  "keywords": [
    "typescript",
    "threejs",
    "controls"
  ],
  "author": "Aleksandar (Aki) Rodic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/io-gui/three-controls/issues"
  },
  "homepage": "https://github.com/io-gui/three.js-controls",
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/consistent-type-assertions": "error",
      "@typescript-eslint/no-use-before-define": "warn",
      "@typescript-eslint/no-floating-promises": "warn",
      "@typescript-eslint/no-explicit-any": "off",
      "no-unused-labels": "off",
      "no-var": "error",
      "eqeqeq": "error"
    }
  },
  "eslintIgnore": [
    "build",
    "src/controls/_*.ts",
    "index.js"
  ],
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-mdcs": "^5.0.0",
    "rollup": "^2.33.3",
    "rollup-plugin-dts": "^1.4.14",
    "three": "^0.122.0",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "three": "^0.122.0"
  }
}
